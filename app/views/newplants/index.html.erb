<p id="notice"><%= notice %></p>

<h1>edytowanie roślinek</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>gatunek</th>
      <th>stan zdrowia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @newplants.each do |plant| %>
      <tr>
        <td><%= plant.name %></td>
        <td><%= plant.species %></td>
        <td><%= plant.health_status %></td>
        <td><%= link_to 'Pokaz', plant %></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
        <td><%= link_to 'skasuj', plant, method: :delete, data: { confirm: 'Jesteś pewny?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

